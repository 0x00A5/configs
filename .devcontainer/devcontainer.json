{
	"name": "Rust",
	"build": {
		"args": {
		},
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers-extra/features/fish-apt-get:1": {},
		"ghcr.io/devcontainers/features/common-utils:2": {
			"username": "vscode",
			"userUid": "1000",
			"userGid": "1000",
			"upgradePackages": "true"
		},
		"ghcr.io/devcontainers/features/rust:1": {
		  "version": "stable,nightly-2025-08-01",
		  "components": "rustfmt,clippy,rust-analyzer"
		},
		"ghcr.io/devcontainers/features/git:1": {
			"version": "latest",
			"ppa": "false"
		},
		"ghcr.io/devcontainers-extra/features/protoc:1": {},
		"ghcr.io/kreemer/features/stow:1": {},
		"ghcr.io/devcontainers-extra/features/ripgrep:1": {},
		"ghcr.io/devcontainers-extra/features/fzf:1": {}
	},
	"containerEnv": {
		"RUSTUP_HOME": "/home/vscode/.rustup",
		"CARGO_HOME": "/home/vscode/.cargo"
	},
	"postCreateCommand": "rustup component add rust-analyzer --toolchain=nightly-2025-08-01"
}
